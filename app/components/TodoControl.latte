    <input id="node" data-link="{link addNode!}"/>
    <a n:href="drop">drop</a>
    {if isset($user->getIdentity()->username)}
        <h2 n:block=title>Úkoly uživatele: {$user->getIdentity()->username}</h2>
    {else}
        <h2>Vaše úkoly</h2>
    {/if}
        {snippet wholeList}
            {if $nodes}
                <ul n:snippet="toDoList">
                    {foreach $nodes as $key => $value}
                    <li n:snippet="{$key}" class="{$value['node_done']}" data-id="{$key}" data-value="{$value['node']}">
                        <label class="singleNode">{$value['node']}</label>
                        <input type="text" class="edit-input" value="{$value['node']}" data-link="{link edit!}"/>
                        <button id="nodeDelete" data-id="{$key}" data-link="{link delete!}">x</button>
                        <input type="checkbox" id="nodeDone" data-id="{$key}" data-link="{link done!}"/>
                    </li>
                    {/foreach}
                </ul>   
            {/if}
        {/snippet}
